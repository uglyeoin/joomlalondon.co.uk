<?xml version="1.0" encoding="UTF-8"?>
<form>
    <field
        name="inline_or_file"
        type="radio"
        label="JAVASCRIPT_ADDER_INLINE_OR_FILE_LABEL"
        description="JAVASCRIPT_ADDER_INLINE_OR_FILE_DESCRIPTION"
        translate_default="true"
        default="1"
        >
            <option value="0">JAVASCRIPT_ADDER_INLINE_OR_FILE_OPTION_INLINE</option>
            <option value="1">JAVASCRIPT_ADDER_INLINE_OR_FILE_OPTION_FILE</option>
    </field>
    <field name="file"
            type="text"
            label="JAVASCRIPT_ADDER_FILE_LABEL"
            description="JAVASCRIPT_ADDER_FILE_DESCRIPTION"
            showon="inline_or_file:1"
            />
    <field name="inline"
            type="textarea"
            label="JAVASCRIPT_ADDER_INLINE_LABEL"
            description="JAVASCRIPT_ADDER_INLINE_DESCRIPTION"
            showon="inline_or_file:0"            
            />
</form>